<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUp">

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtpassword"
        android:layout_width="387dp"
        android:layout_height="60dp"
        android:background="@color/smoke"
        android:drawableEnd="@drawable/baseline_remove_red_eye_24"
        android:hint="password"
        android:inputType="textPassword"
        android:textColor="#070707"
        android:textColorHighlight="#0B0A0A"
        android:textColorHint="#090909"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.553" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtconfirmPass"
        android:layout_width="387dp"
        android:layout_height="60dp"
        android:background="@color/smoke"
        android:drawableEnd="@drawable/baseline_remove_red_eye_24"
        android:hint="Confirm password"
        android:inputType="textPassword"
        android:textColor="#070707"
        android:textColorHighlight="#0B0A0A"
        android:textColorHint="#090909"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.679" />


    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtfullname"
        android:layout_width="391dp"
        android:layout_height="65dp"
        android:background="@color/smoke"
        android:drawableEnd="@drawable/baseline_person_24"
        android:hint="Fullname"
        android:inputType="text"
        android:textColor="#0C0A0A"
        android:textColorHighlight="#0B0A0A"
        android:textColorHint="#090909"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.214" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtemail"
        android:layout_width="391dp"
        android:layout_height="65dp"
        android:background="@color/smoke"
        android:drawableEnd="@drawable/baseline_email_24"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textColor="#0C0A0A"
        android:textColorHighlight="#0B0A0A"
        android:textColorHint="#090909"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.328" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/txtusername"
        android:layout_width="391dp"
        android:layout_height="65dp"
        android:background="@color/smoke"
        android:drawableEnd="@drawable/baseline_person_24"
        android:hint="username"
        android:inputType="text"
        android:shadowColor="#E3CFCF"
        android:textColor="#0C0A0A"
        android:textColorHighlight="#0B0A0A"
        android:textColorHint="#090909"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.442" />

    <Button
        android:id="@+id/btnsign"
        android:layout_width="108dp"
        android:layout_height="62dp"
        android:background="@drawable/shapeshape"
        android:text="SignUp"
        android:textSize="18dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.184"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.788" />

    <Button
        android:id="@+id/btncan"
        android:layout_width="103dp"
        android:layout_height="57dp"
        android:background="@drawable/shapeshape"
        android:text="Cancel"
        android:textSize="18dp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.847"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.787" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/floatingActionButton"
        android:layout_width="70dp"
        android:layout_height="77dp"
        android:background="@drawable/circle"
        android:onClick="logback"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingRight="20dp"
        android:paddingBottom="20dp"
        android:rotationX="180"
        android:rotationY="180"
        android:src="@drawable/baseline_play_arrow_24"
        app:fabSize="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.909"
        app:maxImageSize="64dp" />
</androidx.constraintlayout.widget.ConstraintLayout>